info(
  title: "type title here"
  desc: "type desc here"
  author: "type author here"
  email: "type email here"
  version: "type version here"
)


type (
  IDRequest {
    ID int `path:"id,range=[1:]"`
  }
  RegisterReq {
    IDRequest
    Age int `json:"age,optional,range=[1:]"`
    Username string `json:"username,options=you|m"`
    Password string `json:"password"`
    Mobile string `json:"mobile"`
  }

  LoginReq {
    Username string `json:"username"` //测试
    Password string `json:"password"`//测试2
  }
  UserInfoReq {
    IDRequest
  }

  UserInfoReply {
    Name string `json:"name"`
    Age int `json:"age,range=[0:100],optional"`
    Birthday string `json:"birthday"`
    Description interface{} `json:"description"`
    Tag []string `json:"tag"`
  }

  UserSearchReq {
    KeyWord string `form:"keyWord"` // 关键词
  }
)

service user-api {
@doc(
  summary: 注册
)
  @handler register
  post /api/user/register (RegisterReq)

@doc(
  summary: 登录
)
  @handler login
  post /api/user/login (LoginReq)

@doc(
  summary: 获取用户信息
)
  @handler getUserInfo
  get /api/user/:id (UserInfoReq) returns (UserInfoReply)

@doc(
  summary: 用户搜索
)
  @handler searchUser
  get /api/user/search (UserSearchReq) returns (UserInfoReply)

  @handler swag
  get /swag() returns()
  @handler swagJson
  get /swag-json() returns()
}
